<!DOCTYPE html>
<br>
<div class="card mb-3 mx-auto " style="max-width: 540px;">
  {{#each imagess}}
  <div class="row no-gutters mx-auto ">
    <div class="col-md-4 mx-auto ">
            <img src="{{path}}" class="card-img" alt="{{filename}}">
    </div>
    <div class="col-md-8 mx-auto ">
      <div class="card-body mx-auto ">
        <h3 class="card-title">My Perfil</h3>
        <p class="card-text">Tu Nombre: {{name}}</p>
        <p class="card-text">Tu Religion: {{religion}}</p>
        <p class="card-text">Tu Edad: {{year}}</p>
        <p class="card-text">Tu Favorita: {{favorite}}</p>
        <p class="card-text">Te Describes Como: {{descript}}</p>
	<a class="btn btn-danger btn-block"href="/delete/{{id}}">Eliminar Perfil</a>
	<a class="btn btn-primary btn-block"href="/edit/{{id}}">Editar Perfil</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>

